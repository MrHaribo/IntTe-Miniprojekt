<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>link</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.Link</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>linklist</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.Linklist</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>user</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.User</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>userMap</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.UserMap</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>linksubmit</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.Linksubmit</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>links</property-name>
			<property-class>java.util.List</property-class>
			<value>#{linklist.links}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>comment</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.Comment</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>commentsubmit</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.Commentsubmit</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>comments</property-name>
			<property-class>java.util.List</property-class>
			<value>#{commentlist.comments}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>commentlist</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.Commentlist</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>userLogin</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.UserLogin</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>users</property-name>
			<property-class>java.util.HashMap</property-class>
			<value>#{userMap.users}</value>
		</managed-property>
		<managed-property>
			<property-name>username</property-name>
			<property-class>java.lang.String</property-class>
			<value>#{user.username}</value>
		</managed-property>
		<managed-property>
			<property-name>password</property-name>
			<property-class>java.lang.String</property-class>
			<value>#{user.password}</value>
		</managed-property>
		<managed-property>
			<property-name>loggedIn</property-name>
			<property-class>boolean</property-class>
			<value>#{user.loggedIn}</value>
		</managed-property>
	</managed-bean>
	<navigation-rule>
		<display-name>linksubmit.xhtml</display-name>
		<from-view-id>/linksubmit.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>link_submit</from-outcome>
			<to-view-id>/linklist.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>loggedOut.xhtml</display-name>
		<from-view-id>/loggedOut.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loggedIn</from-outcome>
			<to-view-id>/template.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>linklist.xhtml</display-name>
		<from-view-id>/linklist.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>comment_add</from-outcome>
			<to-view-id>/commentsubmit.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>commentsubmit.xhtml</display-name>
		<from-view-id>/commentsubmit.xhtml</from-view-id>
		<navigation-case>
			<to-view-id>/commentlist.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
