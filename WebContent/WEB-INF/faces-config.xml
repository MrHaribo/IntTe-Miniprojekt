<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<component>
		<component-type>rClone.hsr.ch.Useless</component-type>
		<component-class>rClone.hsr.ch.UselessComponent</component-class>
	</component>

	<managed-bean>
		<managed-bean-name>link</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.Link</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>linklist</property-name>
			<property-class>rClone.hsr.ch.Linklist</property-class>
			<value>#{linklist}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>linklist</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.Linklist</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>user</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.User</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>users</property-name>
			<property-class>java.util.HashMap</property-class>
			<value>#{userMap.users}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>userMap</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.UserMap</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>comment</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.Comment</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>navigationBean</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.NavigationBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>commentCreation</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.CommentCreation</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>languageBean</managed-bean-name>
		<managed-bean-class>rClone.hsr.ch.LanguageBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>linksubmit.xhtml</display-name>
		<from-view-id>/linksubmit.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loggedOut</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>register.xhtml</display-name>
		<from-view-id>/register.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loggedIn</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>index.xhtml</display-name>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>showComments</from-outcome>
			<to-view-id>/commentsubmit.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>linksubmit.xhtml</display-name>
		<from-view-id>/linksubmit.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>showComments</from-outcome>
			<to-view-id>/commentsubmit.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>register.xhtml</display-name>
		<from-view-id>/register.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>showComments</from-outcome>
			<to-view-id>/commentsubmit.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<application>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>de</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>resources.messages.messages</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>

</faces-config>
